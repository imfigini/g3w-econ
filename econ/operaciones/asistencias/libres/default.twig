{% extends "kernel/pagelet.twig" %}
{% block contenido %}

{% if this.data.encabezado %}
<table class="table table-condensed encabezado">
	<tbody>
		<tr class="sin_borde">
			<th>{{"asistencias.libres.materia"|trans|capitalize}}:</th>
			<td>{{ this.data.encabezado.MATERIA_NOMBRE }} ({{ this.data.encabezado.MATERIA }})</td>
			<th>{{"asistencias.libres.comision"|trans|capitalize}}:</th>
			<td>{{ this.data.encabezado.COMISION_NOMBRE }} ({{ this.data.encabezado.COMISION }})</td>
		</tr>
		<tr>
			<th>{{"asistencias.libres.turno"|trans|capitalize}}:</th>
			<td>{{ this.data.encabezado.TURNO }}</td>
			<th>{{"asistencias.libres.sede"|trans|capitalize}}:</th>
			<td>{{ this.data.encabezado.SEDE_NOMBRE }}</td>
		</tr>
		<tr>
			<th>{{"asistencias.libres.periodo"|trans|capitalize}}:</th>
			<td>{{ this.data.encabezado.PERIODO_LECTIVO }}</td>
			<th>{{"asistencias.libres.anio_academico"|trans|capitalize}}:</th>
			<td>{{ this.data.encabezado.ANIO_ACADEMICO }}</td>
		</tr>
	</tbody>
</table>
{% endif %}

{% if this.data.alumnos %}
<table class="table table-striped table-bordered table-condensed">
	<thead>
	<tr>
		<th>{{"asistencias.libres.legajo"|trans|capitalize}}</th>
		<th>{{"asistencias.libres.apellido_nombre"|trans|capitalize}}</th>
		<th>{{"asistencias.libres.inasistencias"|trans|capitalize}}</th>
		<th>{{"asistencias.libres.justificadas"|trans|capitalize}}</th>
		<th>{{"asistencias.libres.tramo"|trans|capitalize}}</th>
	</tr>
	</thead>
	<tbody>
	{% for alumno in this.data.alumnos %}
	<tr>
		<td>{{ alumno.LEGAJO }}</td>
		<td>{{ alumno.APELLIDO_NOMBRE }}</td>
		<td>{{ alumno.CANT_ACUMULADAS }}</td>
		<td>{{ alumno.CANT_JUSTIFICADAS }}</td>
		<td>{{ alumno.TRAMO }}</td>
	</tr>
	{% endfor %}
	</tbody>
</table>
{% else %}
	<div role="alert" class="alert">
		{{"asistencias.libres.no_hay_datos"|trans|capitalize}}
	</div>
{% endif %}
{% endblock %}